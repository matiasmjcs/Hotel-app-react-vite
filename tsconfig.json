{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "types": ["vitest/globals"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "setup.ts", "__test__/components/App.spec.tsx", "__test__/components/loginSignup.spec.tsx", "__test__/components/footer.spec.tsx", "__test__/components/NavBar.spec.tsx", "__test__/components/LinkAuthentication.spec.tsx", "__test__/components/Login.spec.tsx", "__test__/components/SignUp.spec.tsx", "__test__/components/TitleAuthentication.spec.tsx", "__test__/pages/Home.spec.tsx", "__test__/pages/Login.spec.tsx", "__test__/pages/Profile.spec.tsx", "__test__/pages/SignUp.spec.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
